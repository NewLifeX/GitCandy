@{
    var action = ViewContext.RouteData.Values["Action"] as String;
    var pager = ViewBag.Pager as GitCandy.Base.Pager;
}
<div class="text-center">
    <ul class="pagination">
        @if (pager.HasPreviousPage)
        {
            <li>@Html.ActionLink("<<", action, new { page = pager.FirstPageIndex })</li>
            <li>@Html.ActionLink("<", action, new { page = pager.PreviousPageIndex })</li>
        }

        @foreach (int page in pager)
        {
            if (page == pager.CurrentPageIndex)
            {
                <li class="active"><span>@(page)</span></li>
            }
            else
            {
                <li>@Html.ActionLink(page.ToString(), action, new { page })</li>
            }
        }

        @if (pager.HasNextPage)
        {
            <li>@Html.ActionLink(">", action, new { page = pager.NextPageIndex })</li>
            <li>@Html.ActionLink(">>", action, new { page = pager.LastPageIndex })</li>
        }
    </ul>
</div>
