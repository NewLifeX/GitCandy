@using GitCandy.Models
@{
    var repo = Model;
    var user = NewLife.GitCandy.Entity.User.FindByName(repo?.Owner);
}
@if (user != null)
{
    @Html.ActionLink(repo.Owner, "Detail", user.IsTeam ? "Team" : "Account", new { name = repo.Owner }, null)
